# Database
MONGODB_URI=your_mongodb_connection_string

# NextAuth
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# Email Configuration (for lead notifications and welcome emails)
# For Gmail: Use App Password (not regular password)
# Tutorial: https://support.google.com/accounts/answer/185833
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here

# Admin email for lead notifications
ADMIN_EMAIL=admin@yourcompany.com

# Base URL (for email links)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# AI Chatbot (Google Gemini)
# Get your free API key: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Optional: Other email providers
# For SendGrid: smtp.sendgrid.net (port 587)
# For Mailgun: smtp.mailgun.org (port 587)
# For Outlook: smtp-mail.outlook.com (port 587)
